@{
    ViewData["Title"] = "Home Page";
}

<div style="margin: 16px;">
    <canvas id="field" width="800" height="600"></canvas>
</div>

<script type="text/javascript">
    (function () {
        var map = [
            { id: 1, attribute: "red", neighboring: [2, 3] },
            { id: 2, attribute: "red", neighboring: [1, 4] },
            { id: 3, attribute: "red", neighboring: [1, 4, 5] },
            { id: 4, attribute: "red", neighboring: [2, 3, 6] },
            { id: 5, attribute: "red", neighboring: [3, 6] },
            { id: 6, attribute: "shrine", neiboring: [4, 5] },
        ]
        init();
    })();

    function init() {
        var canvas = document.getElementById('field');
        if (canvas.getContext) {
            var ctx = canvas.getContext('2d');
            drawCircle(ctx, 64, 32, "red");        

        }
    }

    function drawCircle(ctx, x, y, color) {
        ctx.beginPath();
        ctx.fillStyle = color;
        ctx.arc(x, y, 16, 0, Math.PI * 2);
        ctx.fill();
    }
</script>
